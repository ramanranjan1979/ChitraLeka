@model IEnumerable<ChitraLeka.ViewModel.Contact.EmailAddress>


<div class="panel panel-default">
    <div class="panel-heading">
        <strong>Email Address List</strong>
    </div>

    @if (Model.Count() > 0)
    {
       
        
         <table class="table">
            <tr>
              
                <th>
                    @Html.DisplayNameFor(model => model.Value)
                </th>  
                <th>
                    @Html.DisplayNameFor(model => model.IsPrimary)
                </th>             
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Value)
                    </td>   
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrimary)
                    </td>                
                </tr>
            }
        </table>
    }
    else
    {
        @: <div class="text-muted">&nbsp;No email address found.</div>
    }
</div>



