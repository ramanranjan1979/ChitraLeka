@model ChitraLeka.ViewModel.Contact.Address

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Add new Address</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.PersonID)

            <div class="form-group">
                @Html.Label("Type", htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(e => Model.AddressTypeId, Model.AddressTypes, new { @class = "form-control" })
                </div>
            </div>


            <div class="form-group">
                <label class="col-sm-2 control-label">Line 1</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Line1, new { htmlAttributes = new { placeholder = "Flat-1 st john's court", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Line1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Line 2</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Line2, new { htmlAttributes = new { placeholder = "101 Wentworth Road", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Line2, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">City</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.City, new { htmlAttributes = new { placeholder = "London", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">State</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.State, new { htmlAttributes = new { placeholder= "London", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.State, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Postcode</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.PostCode, new { htmlAttributes = new { placeholder = "SW1A 1AA", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PostCode, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">Landmark</label>
                <div class="col-sm-10">
                    @Html.EditorFor(model => model.Landmark, new { htmlAttributes = new { placeholder = "Near Buckingham Palace", @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Landmark, "", new { @class = "text-danger" })
                </div>
            </div>
            @if (Model.RuleMessageList != null)
            {
                if (Model.RuleMessageList.Count() > 0)
                {
                    <div class="form-group alert alert-danger">
                        @foreach (var rule in Model.RuleMessageList)
                        {
                            @Html.Label(rule.RuleMessage, rule.RuleMessage, htmlAttributes: new { @class = "control-label col-md-12", @style = "display:block;text-align:center;" })
                        }
                    </div>
                }
            }

        </div>
    </div>
    <div class="modal-footer">
        <button class="btn" type="button" data-dismiss="modal">Cancel</button>
        <input class="btn btn-primary" type="submit" value="Add" />
    </div>
}



