@model ChitraLeka.ViewModel.Registration.Registration
@{
    ViewBag.Title = "Registration Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">

            <div class="panel-heading">
                <div class="panel-title">Registration Detail</div>

                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                </div>
            </div>

            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.FirstName, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Candidate.FirstName, new { @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.LastName, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.Candidate.LastName, htmlAttributes: new { @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GradeName, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.GradeName, htmlAttributes: new { @readonly = "readonly" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.CreatedOn, htmlAttributes: new { @readonly = "readonly" })
                        </div>
                    </div>
                 

                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.PrimaryEmail, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.Candidate.PrimaryEmail, new { @readonly = "readonly"})
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(e => Model.Remark, new { @readonly = "readonly"})
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

