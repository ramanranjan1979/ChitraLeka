@model ChitraLeka.ViewModel.Student.Student

@{
    ViewBag.Title = "Admission Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="content-box-large">
            <div class="panel-heading">
                <div class="panel-title">Admission Details</div>

                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
                    <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.FirstName, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.Candidate.FirstName, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.LastName, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.Candidate.LastName, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.PrimaryEmail, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.Candidate.PrimaryEmail, new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Candidate.DOB, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Candidate.DOB, new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Sex</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Candidate.GenderTypeId, new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                   


                    <div class="form-group">
                        @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.CreatedOn, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DateOfAdmission, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(e => Model.DateOfAdmission, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
                        </div>
                    </div>


                    <div>
                        @foreach (var g in Model.StudentGrades.StudentGrades.Where(x => x.IsCurrent))
                        {
                            <div class="form-group">
                                @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(e => g.Grade, htmlAttributes: new { @readonly = "readonly", @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Term1</label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => g.Term, new { @readonly = "readonly",@class = "form-control" })
                                </div>
                            </div>


                            <div class="form-group">
                                @Html.LabelFor(model => g.StartDate, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(e => g.StartDate, new { @class = "form-control", maxlength = 250, @readonly = "readonly" })
                                </div>
                            </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => g.EndDate, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(e => g.EndDate, new { @class = "form-control", maxlength = 250, @readonly = "readonly" })
                                    </div>
                                </div>
                        }
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Remark, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextAreaFor(e => Model.Remark, new { @readonly = "readonly", @class = "form-control", maxlength = 250, style = "width: 300px; height: 200px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <span>@Html.ActionLink("Back to List", "Index")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
