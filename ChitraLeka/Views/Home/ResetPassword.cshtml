@model ChitraLeka.ViewModel.Security.ResetPassword

<div class="container forms">
    @using (Html.BeginForm("ApplySecurityCodeForRestPassword", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { ID = "frmResetPassword", @class = "form-horizontal", role = "form", @autocomplete = "off" }))
    {
        @Html.HiddenFor(e => e.Person.Id)        
        @Html.AntiForgeryToken()




        <div class="col-lg-12">
            <h1>Password Reset</h1>
            <p style="font-size: 16px;">
                Please use you security code sent in earlier email and enter your new password
            </p>
        </div>

         @Html.ValidationSummary("", new { @class = "alert-danger" })

            <div class="form-group">
                @Html.TextBoxFor(m => m.Person.FirstName,
                                          new
                                          {
                                              @readonly = "readonly",
                                              @class = "form-control"
                                          }
                                      )
            </div>

                <div class="form-group">
                    @Html.TextBoxFor(m => m.Person.LastName,
                                          new
                                          {
                                              @readonly = "readonly",
                                              @class = "form-control"
                                          }
                                     )
                </div>

                <div class="form-group">
                    @Html.PasswordFor(m => m.Password,
                                           new
                                           {
                                               maxlength = "20",
                                               @required = "required",
                                               @Placeholder = "Enter New Password",
                                               @class = "form-control"
                                           })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword,
                                           new
                                           {
                                               maxlength = "20",
                                               @required = "required",
                                               @Placeholder = "Confirm your new password",
                                               @class = "form-control"
                                           }
                                       )
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Person.PrimaryEmail,
                                            new
                                            {
                                                @readonly = "readonly",
                                                @class = "form-control"
                                            })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.SecurityCode,
                                            new
                                            {
                                                maxlength = "20",
                                                @required = "required",
                                                @Placeholder = "Enter your security code",
                                                @class = "form-control"
                                            }
                                      )
                </div>
                

                <div class="form-group">
                    <input type="submit" value="Change Password" class="btn btn-primary" />
                </div>


               

    }
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
